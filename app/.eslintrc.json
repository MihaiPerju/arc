{
    "plugins": ["meteor"],
    "extends": ["plugin:meteor/recommended", "eslint:recommended","plugin:react/recommended"],
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true
      }
       
      },
      "env": {
        "amd": true,
        "node": true
        
      },
      "globals": {
        "_": false,
        "FlowRouter":false,
        "Mongo":false,
        "Roles":false,
        "Picker":false,
        "Npm":false,
        "document":false,
        "window":false,
        "Meteor":false,
        "test":false,
        "SyncedCron":false,
        "Counter": false
    },
    "rules":{
      "rest-spread-spacing": ["error", "never"],
      "meteor/audit-argument-checks": 0
    },
    "settings": {
      "react": {
        "version": "15.6.2"
      }
    }
  }