{
    "plugins": ["meteor","react"],
    "extends": ["plugin:meteor/recommended", "eslint:recommended","plugin:react/recommended"],
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
          "modules": true,
           "experimentalObjectRestSpread": true
      }
       
      },
      "env": {
        "amd": true,
        "node": true
        
      },
      "globals": {
        "_": false,
        "FlowRouter":false,
        "Mongo":false,
        "Roles":false,
        "Picker":false,
        "Npm":false,
        "document":false,
        "window":false,
        "Meteor":false,
        "test":false,
        "SyncedCron":false,
        "Counter": false,
        "Promise":false,
        "Image":false
    },
    "parser": "babel-eslint",
    "rules":{
      "rest-spread-spacing": ["error", "never"],
      "meteor/audit-argument-checks": 0,
      "global-require": "off",
      "allowEmptyReject": true,
      "react/prop-types":0,
      "react/no-string-refs":0
    },
    "settings": {
      "react": {
        "pragma": "React",
        "version": "15.6.2"
      }
    }
  
  }